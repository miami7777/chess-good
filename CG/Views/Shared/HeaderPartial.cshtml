@using System.Globalization
@using CG.Domain
@using CG.Helpers
@{
    var avatarId = User.Identity?.Name != null ? ((ApplicationUser)ViewData["user"])?.AvatarFilesId ??  0 : 0;
    var flag = ViewData["flag"] != null ? ViewData["flag"] : "us";
    var culture = CultureInfo.CurrentCulture;
}
   <!-- Header-->
    <header id="header" class="header">

        <div class="header-menu">        
        <div class="col-sm-7">
                <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                <div class="header-left">
                    <button class="search-trigger"><i class="fa fa-search"></i></button>
                    <div class="form-inline">
                        <form class="search-form">
                            <input class="form-control mr-sm-2" type="text" placeholder="Search ..." aria-label="Search">
                            <button class="search-close" type="submit"><i class="fa fa-close"></i></button>
                        </form>
                    </div>

                    <div class="dropdown for-notification">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="notification" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-bell"></i>
                            <span class="count bg-danger">3</span>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="notification">
                            <p class="red">У вас есть 3 новых оповещения</p>
                            <a class="dropdown-item media bg-flat-color-1" href="#">
                                <i class="fa fa-check"></i>
                                <p>Сервер 1 перегружен.</p>
                            </a>
                            <a class="dropdown-item media bg-flat-color-4" href="#">
                                <i class="fa fa-info"></i>
                            <p>Сервер 2 перегружен.</p>
                            </a>
                            <a class="dropdown-item media bg-flat-color-5" href="#">
                                <i class="fa fa-warning"></i>
                            <p>Сервер 3 перегружен.</p>
                            </a>
                        </div>
                    </div>

                    <div class="dropdown for-message">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                id="message"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="ti-email"></i>
                            <span class="count bg-primary">4</span>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="message">
                            <p class="red">У вас есть 4 новых сообщений</p>
                            <a class="dropdown-item media bg-flat-color-1" href="#">
                            <span class="photo media-left"><img alt="avatar" src="~/images/avatar/1.jpg"></span>
                                <span class="message media-body">
                                    <span class="name float-left">Мурат Болотчиев</span>
                                    <span class="time float-right">только что</span>
                                    <p>Привет, отличный сайт. здорово!</p>
                                </span>
                            </a>
                            <a class="dropdown-item media bg-flat-color-4" href="#">
                                <span class="photo media-left"><img alt="avatar" src="~/images/avatar/2.jpg"></span>
                                <span class="message media-body">
                                    <span class="name float-left">Misha Like</span>
                                    <span class="time float-right">5 минут назад</span>
                                    <p>Спасибо за игру</p>
                                </span>
                            </a>
                            <a class="dropdown-item media bg-flat-color-5" href="#">
                                <span class="photo media-left"><img alt="avatar" src="~/images/avatar/3.jpg"></span>
                                <span class="message media-body">
                                    <span class="name float-left">Наталья Капранова</span>
                                    <span class="time float-right">10 минут назад</span>
                                    <p>Добрый день, как у вас дела?</p>
                                </span>
                            </a>
                            <a class="dropdown-item media bg-flat-color-3" href="#">
                                <span class="photo media-left"><img alt="avatar" src="~/images/avatar/4.jpg"></span>
                                <span class="message media-body">
                                    <span class="name float-left">DrNikter</span>
                                    <span class="time float-right">15 минут назад</span>
                                    <p>Почему не сдаешься в проигранной позиции?</p>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-5">
                <div class="user-area dropdown float-right">
                @{                    
                if (avatarId != 0) {
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img class="user-avatar rounded-circle" src="@(Url.Action("DownloadThumb", "Home" , new { id=avatarId }, System.Configuration.ConfigurationManager.AppSettings["httpschema"]))" alt="User Avatar">
                    </a>
                    } else
                    {
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img class="user-avatar rounded-circle" src="~/assets/assets/img/avatar/default.jpg" alt="User Avatar">
                        </a>
                    }
                }
                    <div class="user-menu dropdown-menu">
                    <a class="nav-link" href="~/adm/@culture.Name.ToString()/home/profile"><i class="fa fa-user"></i> Мой профиль</a>

                        <a class="nav-link" href="#"><i class="fa fa-user"></i> Уведомления <span class="count">13</span></a>

                        <a class="nav-link" href="#"><i class="fa fa-cog"></i> Настройки</a>

                    <a class="nav-link" href="~/@culture.Name.ToString()/account/logout"><i class="fa fa-power-off"></i> Выход</a>
                    </div>
                </div>

                <div class="language-select dropdown" id="language-select">
                    <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="language" aria-haspopup="true" aria-expanded="true">
                    <i class="flag-icon flag-icon-@flag"></i>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="language">
                        <div class="dropdown-item">
                            <span class="flag-icon flag-icon-fr"></span>
                        </div>
                        <div class="dropdown-item">
                            <i class="flag-icon flag-icon-es"></i>
                        </div>
                        <div class="dropdown-item">
                            <i class="flag-icon flag-icon-us"></i>
                        </div>
                        <div class="dropdown-item">
                            <i class="flag-icon flag-icon-it"></i>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </header><!-- /header -->
    <!-- Header-->

  

   
